<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
     <h1>Comment on <%=content.name%></h1>   
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/home/<%=content._id%>/comments" method="POST">
            <div class="form-group">
                <textarea class="form-control"  name="comment[text]" >Write something here</textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-success btn-block">Submit!</button>
            </div>
        </form>
        <a href="/home/<%=content._id%>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>
