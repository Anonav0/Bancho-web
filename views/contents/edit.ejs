  <% include ../partials/header %>

    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
        <p><i class="fas fa-assistive-listening-systems fa-3x"></i></p>
         <h1 class="text-white">Create a Content</h1>   
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/home/<%= content._id%>?_method=PUT" method="POST">
                <div class="form-group">
                   <input class=" emoji form-control" type="text" name="content[name]" value="<%=content.name%>">
                </div>
                <div class="form-group">
                    <textarea class=" emoji form-control"  name="content[body]" ><%= content.name %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit!</button>
                </div>
            </form>
            <a href="/home">Go Back</a>
        </div>
    </div>

