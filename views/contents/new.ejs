 <% include ../partials/header %>

    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
         <h1><strong>Create a Content</h1></strong>    
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/home" method="POST">
                <div class="form-group">
                   <input class=" emoji form-control" type="text" name="content[name]" placeholder="name">
                </div>
                <div class="form-group">
                    <textarea class=" emoji form-control"  name="content[body]" >Write something here</textarea>
                </div>
                <div class="form-group">
                    <button class="btn aqua-gradient btn-block">Submit!</button>
                </div>
            </form>
            <a href="/home" class="btn btn-sm text-white">Go Back</a>
        </div>
    </div>

