<% include ../partials/header %>


<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <p><i class="fas fa-assistive-listening-systems fa-3x text-white"></i></p>
        <h1><strong class="text-white">Edit <%=user.username%></h1></strong>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/user/<%= user._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="inputFirstname" class="sr-only">FirstName</label>
                <input class="form-control" id="inputFirstname"type="text" name="firstName" value="<%=user.firstName%>">
            </div>
            <div class="form-group">
                <label for="inputLastname" class="sr-only">LastName</label>
                <input class="form-control" id="inputLastname" type="text" name="lastName" value="<%=user.lastName%>">
            </div>
            <div class="form-group">
                <label for="inputAbout" class="sr-only">About</label>
                <textarea class="form-control" id="inputAbout" name="about" ><%= user.about %></textarea>
            </div>
            
            <div class="form-group">
                <label for="inputEmail" class="sr-only">Email</label>
                <input class="form-control" id="inputEmail" type="text" name="email" value="<%=user.email%>">
            </div>
            <div class="form-group">
                <label for="avatar" class="sr-only">Avatar</label>
                <input type="file" id="avatar" name="avatar" accept="image/*">
            </div>
            
            <div class="form-group">
                <button class="btn aqua-gradient btn-block">Submit!</button>
            </div>
        </form>
        <div class="signin-form">
                <a href="/home" class="btn btn-sm text-white">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>



